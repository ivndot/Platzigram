<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.platzigram">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ImageDetail"
            android:parentActivityName=".view.Container">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.Container" />
        </activity>
        <activity android:name=".view.Container" />
        <activity
            android:name=".Prueba"
            android:label="@string/title_activity_prueba"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.Registrer"
            android:parentActivityName=".login.view.Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.view.Login" />
        </activity>
        <activity android:name=".login.view.Login">

        </activity>
    </application>

</manifest>